<UserControl x:Class="mPuzzle.SyncErrorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Height="172" Width="403">

    <StackPanel Width="403" x:Name="nameInput" Visibility="Visible" Height="173">
        <StackPanel.Background>
            <SolidColorBrush Color="Black" Opacity="0.55" />
        </StackPanel.Background>
        <Line Height="20" />
        <TextBlock TextAlignment="Center">
            Error occured during synchronization.<LineBreak />Please try again.
        </TextBlock>
        <Line Height="20" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonOk" Grid.Column="0" Content="Ok" />
        </Grid>
    </StackPanel>
</UserControl>
